{
    "manifest_version": 3,
    "name": "AI Chat Cleanse",
    "version": "1.0.0",
    "description": "Detects and cleanses sensitive information from AI chat inputs",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://chatgpt.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*"],
        "js": ["scripts/content.js"],
        "type": "module"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }