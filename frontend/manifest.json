{
  "manifest_version": 3,
  "name": "AI Chat Cleanse",
  "version": "1.0.0",
  "description": "Detects and cleanses sensitive information from AI chat inputs",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://127.0.0.1:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["scripts/patterns.js"],
    "matches": ["https://chatgpt.com/*"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}